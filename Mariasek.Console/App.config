<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="players" type="Mariasek.WinSettings.PlayersConfigurationSection, Mariasek.WinSettings" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <!-- enable TPL to run on all cores -->
  <runtime>
    <Thread_UseAllCpuGroups enabled="true"/>
    <GCCpuGroup enabled="true"/>
    <gcServer enabled="true"/>
  </runtime>
  <players>
    <!--<player1 name="Hrac1" type="Mariasek.Engine.New.DummyPlayer" assembly="Mariasek.Engine.New.dll" />
    <player2 name="Hrac2" type="Mariasek.Engine.New.DummyPlayer" assembly="Mariasek.Engine.New.dll" />-->
    <player1 name="Alpha" type="Mariasek.Engine.New.AiPlayer" assembly="Mariasek.Engine.New.dll">
      <parameter name="AiCheating" value="false" />
      <parameter name="RoundsToCompute" value="1" />
      <parameter name="CardSelectionStrategy" value="MaxCount" />
      <parameter name="SimulationsPerRound" value="50" />
      <parameter name="RuleThreshold" value="80" />
      <parameter name="SingleRuleThreshold" value="0" />
      <parameter name="SingleRuleThreshold.Kilo" value="95" />
      <parameter name="GameThreshold" value="75|80|85|90|95" />
      <parameter name="MaxDoubleCount" value="5" />
    </player1>
    <player2 name="Bravo" type="Mariasek.Engine.New.AiPlayer" assembly="Mariasek.Engine.New.dll">
      <parameter name="AiCheating" value="false" />
      <parameter name="RoundsToCompute" value="1" />
      <parameter name="CardSelectionStrategy" value="MaxCount" />
      <parameter name="SimulationsPerRound" value="50" />
      <parameter name="RuleThreshold" value="80" />
      <parameter name="SingleRuleThreshold" value="0" />
      <parameter name="SingleRuleThreshold.Kilo" value="95" />
      <parameter name="GameThreshold" value="75|80|85|90|95" />
      <parameter name="MaxDoubleCount" value="5" />
    </player2>
    <player3 name="Charlie" type="Mariasek.Engine.New.AiPlayer" assembly="Mariasek.Engine.New.dll">
      <parameter name="AiCheating" value="false" />
      <parameter name="RoundsToCompute" value="1" />
      <parameter name="CardSelectionStrategy" value="MaxCount" />
      <parameter name="SimulationsPerRound" value="50" />
      <parameter name="RuleThreshold" value="80" />
      <parameter name="SingleRuleThreshold" value="0" />
      <parameter name="SingleRuleThreshold.Kilo" value="95" />
      <parameter name="GameThreshold" value="75|80|85|90|95" />
      <parameter name="MaxDoubleCount" value="5" />
    </player3>
  </players>
  <log4net>
    <!-- Appender definitions -->
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="Logs\LogFile.%date{yyyy-MM-dd_HHmmss}.log" />
      <appendToFile value="false"/>
      <immediateFlush value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="10MB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <header value="[Header]&#xD;&#xA;"/>
        <footer value="[Footer]&#xD;&#xA;"/>
        <conversionPattern value="%d{yyyy-MM-dd HH:mm:ss,fff} [%t] %p %c{1}: %m%n"/>
      </layout>
    </appender>
    <!-- logger config -->
    <root>
      <!--<level value="FATAL" />-->
      <!--<level value="ERROR" />-->
      <!--<level value="WARN" />-->
      <level value="INFO" />
      <!--<level value="DEBUG" />-->
      <!--<level value="TRACE" />-->
      <appender-ref ref="RollingFileAppender"/>
    </root>
  </log4net>
</configuration>